{
    "env": {
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "curly": "error",
        "prefer-const": "error",
        "strict": "error",
        "no-unused-vars": "off",
        "no-magic-numbers": "error",
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "import/prefer-default-export": "off",
        "no-console": "off",
        "no-return-await": "off",
        "no-tabs": "off",
        "indent": ["error", "tab"],
        "comma-dangle": ["error", "never"]
    }
}
